<window id="101">
	<defaultcontrol>10</defaultcontrol>
	<controls>
		<control type="progress">
			<description>Progressbar</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<info>System.Progressbar</info>
			<texturebg border="0,0,0,0">Special://skin/720p/textures/ProgressBack.png</texturebg>
			<midtexture border="0,0,0,0">Special://skin/720p/textures/ProgressFront.png</midtexture>
			<lefttexture>-</lefttexture>
			<righttexture>-</righttexture>
			<overlaytexture>-</overlaytexture>
			<aspectratio>stretch</aspectratio>
		</control>
		<control type="group">
			<posx>290</posx>
			<posy>210</posy>
			<include>dialogeffect</include>
			<visible>!Window.IsActive(0) + !Window.IsActive(1)</visible>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>700</width>
				<height>300</height>
				<texture border="40">DialogBack.png</texture>
			</control>
			<control type="label" id="1">
				<description>heading label</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>0</width>
				<height>0</height>
				<font>-</font>
				<visible>false</visible>
			</control>
			<control type="image">
				<description>Heading Background</description>
				<posx>30</posx>
				<posy>35</posy>
				<width>640</width>
				<height>40</height>
				<texture border="5">ThumbFO.png</texture>
			</control>
			<control type="label">
				<description>dialog line 1</description>
				<posx>40</posx>
				<posy>85</posy>
				<width>620</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>Installing Update</label>
				<font>font22</font>
			</control>
			<control type="label" id="3">
				<description>dialog line 2</description>
				<posx>40</posx>
				<posy>115</posy>
				<width>620</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>-</label>
				<font>font18</font>
				<haspath>yes</haspath>
			</control>
			<control type="label">
				<description>dialog line 3</description>
				<posx>40</posx>
				<posy>145</posy>
				<width>620</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>Please wait this can take some time.</label>
				<font>font15</font>
				<haspath>yes</haspath>
			</control>
		</control>
		<!-- Debug Info -->
		<include>Debug</include>
	</controls>
</window>