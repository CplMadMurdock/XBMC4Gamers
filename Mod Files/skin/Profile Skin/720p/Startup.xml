<window id="2999">
		<onload>RunScript( Special://xbmc/scripts/XBMC4Gamers/default.py )</onload>
		<defaultcontrol always="true">1</defaultcontrol>
		<allowoverlay>no</allowoverlay>
		<controls>
				<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>1280</width>
						<height>720</height>
						<texture fallback="Background.png">$INFO[skin.string(background_color)]</texture>
						<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>1280</width>
						<height>720</height>
						<texture>background diffuse.png</texture>
						<colordiffuse>$VAR[var-bgcustcolour]</colordiffuse>
						<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>1280</width>
						<height>720</height>
						<texture>$INFO[skin.string(background_image)]</texture>
						<aspectratio>scale</aspectratio>
				</control>
				<control type="group">
						<posx>524</posx>
						<posy>252</posy>
						<control type="image">
								<posx>0</posx>
								<posy>0</posy>
								<width>234</width>
								<height>234</height>
								<aspectratio>stretch</aspectratio>
								<texture border="5">button-focus.png</texture>
						</control>
						<control type="image">
								<posx>5</posx>
								<posy>5</posy>
								<width>224</width>
								<height>224</height>
								<aspectratio>stretch</aspectratio>
								<texture>black-back.png</texture>
								<bordersize>1</bordersize>
						</control>
						<control type="image">
								<posx>5</posx>
								<posy>5</posy>
								<width>224</width>
								<height>224</height>
								<aspectratio>stretch</aspectratio>
								<texture>$INFO[system.profilethumb]</texture>
						</control>
						<!-- Flipped images -->
						<control type="image">
								<posx>0</posx>
								<posy>235</posy>
								<width>234</width>
								<height>234</height>
								<aspectratio>stretch</aspectratio>
								<texture flipy="true" diffuse="diffuse_mirror.png">button-focus.png</texture>
						</control>
						<control type="image">
								<posx>5</posx>
								<posy>240</posy>
								<width>224</width>
								<height>224</height>
								<aspectratio>stretch</aspectratio>
								<texture flipy="true" diffuse="diffuse_mirror.png">black-back.png</texture>
						</control>
						<control type="image">
								<posx>5</posx>
								<posy>240</posy>
								<width>224</width>
								<height>224</height>
								<aspectratio>stretch</aspectratio>
								<texture flipy="true" diffuse="diffuse_mirror.png">$INFO[system.profilethumb]</texture>
						</control>
				</control>
				<control type="label">
						<posx>0</posx>
						<posy>559</posy>
						<width>1280</width>
						<height>36</height>
						<font>size_35</font>
						<textcolor>$VAR[var-labelcolour]</textcolor>
						<scroll>true</scroll>
						<align>center</align>
						<aligny>center</aligny>
						<label>[UPPERCASE]$LOCALIZE[32028][/UPPERCASE]</label>
				</control>
				<control type="label">
						<posx>5</posx>
						<posy>35r</posy>
						<width>1280</width>
						<height>36</height>
						<font>size_15</font>
						<textcolor>$VAR[var-labelcolour]</textcolor>
						<label> $LOCALIZE[32029]</label>
						<align>left</align>
						<aligny>center</aligny>
						<animation type="WindowOpen" reversible="false">
								<effect type="fade" start="0" end="100" delay="0" time="0" />
								<effect type="fade" start="100" end="0" delay="19000" time="1000" />
						</animation>
				</control>
				<control type="label.">
						<posx>5</posx>
						<posy>35r</posy>
						<width>1280</width>
						<height>36</height>
						<font>size_15</font>
						<textcolor>$VAR[var-labelcolour]</textcolor>
						<label> $LOCALIZE[32057]</label>
						<align>left</align>
						<aligny>center</aligny>
						<animation effect="fade" end="100" delay="20000" time="1000">WindowOpen</animation>
				</control>
				<!-- Hidden buttons to run scripts & goto specific windows -->
				<control type="button" id="1">
						<posx>-5000</posx>
						<description>Trigger</description>
						<onfocus>Skin.Reset(PreviewWindow)</onfocus>
						<visible>!Skin.HasSetting(Use_Startup_Playback)</visible>
				</control>
				<control type="button" id="1">
						<posx>-5000</posx>
						<description>Trigger</description>
						<onfocus>Skin.Reset(PreviewWindow)</onfocus>
						<onfocus>XBMC.PlayMedia($INFO[Skin.String(Startup_Playback_Path)])</onfocus>
						<visible>Skin.HasSetting(Use_Startup_Playback)</visible>
				</control>
				<!-- Debug Info -->
				<include>Debug</include>
		</controls>
</window>