<includes>
		<include name="ResourcesView">
				<control type="group">
						<visible>Control.IsVisible(60) + !Control.IsVisible(50) + !Window.IsVisible(134)</visible>
						<include>Window_OpenClose_Animation</include>
						<!-- Poster.jpg -->
						<control type="group">
								<posx>30</posx>
								<posy>230</posy>
								<control type="image">
										<posx>0</posx>
										<posy>0</posy>
										<width>214</width>
										<height>290</height>
										<aspectratio>stretch</aspectratio>
										<texture border="5">thumbnf.png</texture>
								</control>
								<control type="image">
										<posx>5</posx>
										<posy>5</posy>
										<width>205</width>
										<height>280</height>
										<aspectratio>stretch</aspectratio>
										<texture background="true" fallback="no_poster.png">$INFO[listitem.path,,_resources\artwork\poster.jpg]</texture>
										<bordertexture border="5">-</bordertexture>
										<bordersize>1</bordersize>
								</control>
						</control>
						<!-- Thumb.jpg -->
						<control type="group">
								<posx>270</posx>
								<posy>180</posy>
								<control type="image">
										<posx>0</posx>
										<posy>0</posy>
										<width>320</width>
										<height>180</height>
										<aspectratio>stretch</aspectratio>
										<texture border="5">button-focus.png</texture>
								</control>
								<control type="image">
										<posx>5</posx>
										<posy>5</posy>
										<width>310</width>
										<height>170</height>
										<aspectratio>stretch</aspectratio>
										<texture>black-back.png</texture>
								</control>
								<control type="image">
										<posx>5</posx>
										<posy>5</posy>
										<width>310</width>
										<height>170</height>
										<aspectratio>stretch</aspectratio>
										<texture background="true" fallback="no_thumb.png">$INFO[listitem.path,,_resources\artwork\thumb.jpg]</texture>
								</control>
						</control>
						<!-- Icon.jpg -->
						<control type="group">
								<posx>320</posx>
								<posy>380</posy>
								<control type="image">
										<posx>2</posx>
										<posy>0</posy>
										<width>214</width>
										<height>214</height>
										<aspectratio>stretch</aspectratio>
										<texture border="5">button-focus.png</texture>
								</control>
								<control type="image">
										<posx>7</posx>
										<posy>5</posy>
										<width>204</width>
										<height>204</height>
										<aspectratio>stretch</aspectratio>
										<texture>black-back.png</texture>
								</control>
								<control type="image">
										<posx>7</posx>
										<posy>5</posy>
										<width>204</width>
										<height>204</height>
										<aspectratio>stretch</aspectratio>
										<texture background="true" fallback="no_icon.png">$INFO[listitem.path,,_resources\artwork\icon.jpg]</texture>
								</control>
						</control>
						<!-- Fanart.jpg -->
						<control type="group">
								<posx>670r</posx>
								<posy>130</posy>
								<control type="image">
										<posx>0</posx>
										<posy>0</posy>
										<width>640</width>
										<height>360</height>
										<aspectratio>stretch</aspectratio>
										<texture>black-back.png</texture>
										<bordersize>5</bordersize>
								</control>
								<control type="image">
										<posx>0</posx>
										<posy>0</posy>
										<width>640</width>
										<height>360</height>
										<aspectratio>scale</aspectratio>
										<texture background="true" fallback="no_fanart.png">$INFO[listitem.path,,_resources\artwork\fanart.jpg]</texture>
										<bordersize>5</bordersize>
								</control>
								<control type="image">
										<posx>0</posx>
										<posy>0</posy>
										<width>640</width>
										<height>360</height>
										<aspectratio>stretch</aspectratio>
										<texture border="5">poster-border.png</texture>
								</control>
						</control>
						<!-- Banner.jpg -->
						<control type="group">
								<posx>670r</posx>
								<posy>520</posy>
								<control type="image">
										<posx>0</posx>
										<posy>0</posy>
										<width>570</width>
										<height>120</height>
										<aspectratio>stretch</aspectratio>
										<texture>black-back.png</texture>
										<bordertexture border="5">-</bordertexture>
										<bordersize>1</bordersize>
								</control>
								<control type="image">
										<posx>0</posx>
										<posy>0</posy>
										<width>570</width>
										<height>120</height>
										<aspectratio>stretch</aspectratio>
										<texture background="true" fallback="no_banner.png">$INFO[listitem.path,,_resources\artwork\banner.jpg]</texture>
										<bordertexture border="5">-</bordertexture>
										<bordersize>1</bordersize>
								</control>
								<control type="image">
										<posx>0</posx>
										<posy>0</posy>
										<width>570</width>
										<height>120</height>
										<aspectratio>stretch</aspectratio>
										<colordiffuse>blue</colordiffuse>
										<texture border="5">poster-border.png</texture>
								</control>
						</control>
						<control type="fixedlist" id="60">
								<posx>0</posx>
								<posy>0</posy>
								<width>1280</width>
								<height>460</height>
								<onleft>-</onleft>
								<onright>-</onright>
								<onup>117</onup>
								<ondown>-</ondown>
								<viewtype label="Resources">list</viewtype>
								<pagecontrol>-</pagecontrol>
								<scrolltime>0</scrolltime>
								<focusposition>1</focusposition>
								<movement>1</movement>
								<orientation>horizontal</orientation>
								<itemlayout />
								<focusedlayout />
						</control>
						<control type="label">
								<posx>320</posx>
								<posy>70</posy>
								<width>960</width>
								<height>36</height>
								<font>font25</font>
								<textcolor>$VAR[var-labelcolour]</textcolor>
								<scroll>false</scroll>
								<align>left</align>
								<aligny>center</aligny>
								<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
								<animation reversible="true" effect="fade" start="100" end="0" delay="" time="300" condition="Container(60).OnScrollNext">Conditional</animation>
								<animation reversible="true" effect="fade" start="100" end="0" delay="" time="300" condition="Container(60).OnScrollPrevious">Conditional</animation>
						</control>
				</control>
		</include>
</includes>