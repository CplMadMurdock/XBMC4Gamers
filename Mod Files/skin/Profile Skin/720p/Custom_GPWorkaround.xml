<window type="dialog" id="1113">
		<defaultcontrol always="true">9000</defaultcontrol>
		<controls>
				<!-- Display preview overlay -->
				<control type="group">
						<visible>!Skin.HasSetting(Synopsis)</visible>
						<control type="button" id="9000">
								<posx>-500</posx>
								<onfocus>Skin.SetBool(PreviewWindow)</onfocus>
								<onfocus>PlayWith(dvdplayer)</onfocus>
								<onfocus>xbmc.playmedia($INFO[ListItem.Path,,preview].xmv,1,noresume)</onfocus>
								<onfocus>SetFocus(9004)</onfocus>
								<onfocus>dialog.close(1113,true)</onfocus>
								<visible>!Skin.HasSetting(PreviewExtension) + !Skin.HasSetting(PreviewWindow) + !Player.HasMedia</visible>
						</control>
						<control type="button" id="9000">
								<posx>-500</posx>
								<onfocus>Skin.SetBool(PreviewWindow)</onfocus>
								<onfocus>PlayWith(mplayer)</onfocus>
								<onfocus>xbmc.playmedia($INFO[ListItem.Path,,preview].$INFO[Skin.String(PreviewFileExtension)],1,noresume)</onfocus>
								<onfocus>SetFocus(9004)</onfocus>
								<onfocus>dialog.close(1113,true)</onfocus>
								<visible>Skin.HasSetting(PreviewExtension) + !Skin.HasSetting(PreviewWindow) + !Player.HasMedia</visible>
						</control>
				</control>
				<control type="group">
						<visible>Skin.HasSetting(Synopsis)</visible>
						<control type="button" id="9000">
								<posx>-500</posx>
								<onfocus>Skin.SetBool(PreviewWindow)</onfocus>
								<onfocus>SetFocus(9004)</onfocus>
								<onfocus>dialog.close(1113,true)</onfocus>
								<onfocus>RunScript( Special://xbmc/scripts/XBMC4Kids/Synopsis/default.py )</onfocus>
								<visible>!Skin.HasSetting(PreviewWindow) + !Player.HasMedia</visible>
						</control>
				</control>
				<!-- Close preview window if no video is playing -->
				<control type="button" id="9000">
						<posx>-500</posx>
						<onfocus>Skin.Reset(PreviewWindow)</onfocus>
						<onfocus>Skin.Reset(Synopsis_Video_Preview_Name)</onfocus>
						<onfocus>dialog.close(1113,true)</onfocus>
						<onfocus>SetFocus(50)</onfocus>
						<onfocus>Stop</onfocus>
						<visible>Skin.HasSetting(PreviewWindow)</visible>
				</control>
				<!-- Open PlayerControlles dialog if audio is playing -->
				<control type="button" id="9000">
						<posx>-500</posx>
						<onfocus>Skin.Reset(PreviewWindow)</onfocus>
						<onfocus>Skin.Reset(Synopsis_Video_Preview_Name)</onfocus>
						<onfocus>dialog.close(1113,true)</onfocus>
						<onfocus>ReplaceWindow(114)</onfocus>
						<visible>Player.HasAudio</visible>
				</control>
				<!-- Debug Info -->
				<include>Debug</include>
		</controls>
</window>