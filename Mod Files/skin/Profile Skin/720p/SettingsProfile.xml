<window id="34">
	<defaultcontrol always="true">4</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>CommonBackground</include>
		<control type="image">
			<posx>260</posx>
			<posy>270</posy>
			<width>760</width>
			<height>115</height>
			<texture>black-back.png</texture>
		</control>
		<control type="textbox">
			<posx>260</posx>
			<posy>290</posy>
			<width>760</width>
			<height>105</height>
			<font>size_25</font>
			<textcolor>white</textcolor>
			<scroll>true</scroll>
			<align>center</align>
			<label>Login Screen is disabled.[CR]You will always login as $INFO[system.profilename]</label>
			<visible>![System.HasLoginScreen + System.Loggedon]</visible>
		</control>
		<control type="textbox">
			<posx>260</posx>
			<posy>290</posy>
			<width>760</width>
			<height>105</height>
			<font>size_25</font>
			<textcolor>white</textcolor>
			<scroll>true</scroll>
			<align>center</align>
			<label>Login Screen is enabled.[CR]You will be able to select from multiple profiles.</label>
			<visible>[System.HasLoginScreen + System.Loggedon]</visible>
		</control>
		<control type="grouplist">
			<posx>260</posx>
			<posy>385</posy>
			<width>760</width>
			<height>200</height>
			<itemgap>0</itemgap>
			<onup>9001</onup>
			<ondown>9001</ondown>
			<control type="radiobutton" id="4">
				<description>View As button</description>
				<width>760</width>
				<height>50</height>
				<label>20096</label>
				<textcolor>white</textcolor>
				<focusedcolor>black</focusedcolor>
				<texturefocus border="5">Special://xbmc/scripts/XBMC4Gamers Extras/synopsis/resources/textures/settings/ThumbFO.png</texturefocus>
				<texturenofocus border="5">Special://xbmc/scripts/XBMC4Gamers Extras/synopsis/resources/textures/settings/underlay.png</texturenofocus>
			</control>
		</control>
		<include>WindowHeader</include>
		<control type="image">
			<posx>20</posx>
			<posy>5</posy>
			<width>40</width>
			<height>35</height>
			<aspectratio>keep</aspectratio>
			<texture>icon_system.png</texture>
			<include>Window_OpenClose_Animation</include>
		</control>
		<control type="label">
			<description>Header label</description>
			<posx>70</posx>
			<posy>5</posy>
			<width>700</width>
			<height>35</height>
			<align>left</align>
			<aligny>center</aligny>
			<font>size_20</font>
			<textcolor>white</textcolor>
			<label>$LOCALIZE[20077]</label>
			<include>Window_OpenClose_Animation</include>
		</control>
		<include>WindowFooter</include>
		<include>BehindDialogFadeOut</include>
