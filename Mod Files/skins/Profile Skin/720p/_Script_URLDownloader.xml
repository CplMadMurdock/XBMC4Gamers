<window type="window" id="1901">
		<defaultcontrol always="true">1</defaultcontrol>
		<onload>RunScript(Special://urldownloader/default.py,updates/URLDownloader.zip,Q:/system/scripts/)</onload>
		<onload>ActivateWindow(1101)</onload>
		<controls>
				<!-- Background Images -->
				<include>CommonBackground</include>
				<include>WindowHeader</include>
				<control type="image">
						<posx>20</posx>
						<posy>5</posy>
						<width>40</width>
						<height>35</height>
						<aspectratio>keep</aspectratio>
						<texture>icon_system.png</texture>
						<include>Window_OpenClose_Animation</include>
				</control>
				<control type="label">
						<description>Header label</description>
						<posx>70</posx>
						<posy>5</posy>
						<width>700</width>
						<height>35</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>size_23</font>
						<textcolor>white</textcolor>
						<label>Downloader</label>
						<include>Window_OpenClose_Animation</include>
				</control>
				<!-- Bottom URLDownloader Version Label -->
				<control type="label">
						<posx>10r</posx>
						<posy>30r</posy>
						<width>1280</width>
						<height>25</height>
						<font>size_19</font>
						<textcolor>white</textcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>URLDownloader Version: $INFO[Skin.String(URLDownloaderVer)]</label>
						<include>Window_OpenClose_Animation</include>
				</control>
				<include>WindowFooter</include>
				<include>ContextButtonsSettings</include>
		</controls>
</window>