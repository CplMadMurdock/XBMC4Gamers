												<selectedcolor>blue</selectedcolor>
												<align>left</align>
												<aligny>center</aligny>
												<label>$INFO[ListItem.Label2]</label>
										</control>
								</focusedlayout>
								<content>
										<item id="1">
												<label>Auto Install Game</label>
												<label2>Automate the process · Auto return to XBMC4Gamers</label2>
